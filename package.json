{
  "name": "nocaap",
  "version": "0.0.2",
  "description": "Normalized Organizational Context-as-a-Package. Standardize your AI agent context.",
  "type": "module",
  "bin": {
    "nocaap": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "bash tests/run-tests.sh",
    "test:quick": "npm run build && npm run typecheck && npm run test:unit",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:eval",
    "test:eval": "tsx tests/eval/run-eval.ts --fixtures",
    "test:eval:local": "tsx tests/eval/run-eval.ts",
    "test:eval:core": "tsx tests/eval/run-eval.ts --fixtures --core",
    "test:eval:baseline": "tsx tests/eval/run-eval.ts --fixtures --record-baseline",
    "test:eval:compare": "tsx tests/eval/run-eval.ts --fixtures --compare-baseline",
    "test:query": "tsx test-debug.ts"
  },
  "keywords": [
    "ai",
    "context",
    "llm",
    "documentation",
    "git",
    "hub-and-spoke"
  ],
  "author": "Nitesh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niteshpant99/nocaap.git"
  },
  "homepage": "https://nocaap.org",
  "bugs": {
    "url": "https://github.com/niteshpant99/nocaap/issues"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@inquirer/prompts": "^3.3.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@orama/orama": "^3.0.0",
    "@orama/plugin-data-persistence": "^3.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "gray-matter": "^4.0.3",
    "node-fetch": "^3.3.2",
    "ora": "^7.0.1",
    "simple-git": "^3.21.0",
    "upath": "^2.0.1",
    "zod": "^3.22.4"
  },
  "optionalDependencies": {
    "@lancedb/lancedb": "^0.15.0",
    "@xenova/transformers": "^2.17.0",
    "apache-arrow": "18",
    "ollama": "^0.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "tsup": "^8.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18"
  }
}
